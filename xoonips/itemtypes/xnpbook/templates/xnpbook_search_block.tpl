<{* xnpbook register block *}>
<{* $Revision: 1.4.8.2 $ *}>

<table class="outer">
  <tr>
   <th align="left"><input type="checkbox" name="<{$module_name}>" value="on" onclick="showhide('<{$module_name}>_search_block');"/><{$module_display_name}></th>
  </tr>
</table>
<div id="<{$module_name}>_search_block" class="xoonips_search_block">
<table class="outer">
  <!-- Basic Information -->
     <tr>
       <td class="head" width="30%"><{$basic.title.name}></td>
       <td class="<{cycle name="oddeven" values="odd,even"}>"><{$basic.title.value}></td>
     </tr>
     <tr>
       <td class="head"><{$basic.keywords.name}></td>
       <td class="<{cycle name="oddeven"}>"><{$basic.keywords.value}></td>
     </tr>
     <tr>
       <td class="head"><{$basic.description.name}></td>
       <td class="<{cycle name="oddeven"}>"><{$basic.description.value}></td>
     </tr>
     <tr>
       <td class="head"><{$basic.doi.name}></td>
       <td class="<{cycle name="oddeven"}>"><{$basic.doi.value}></td>
     </tr>

     <!-- Book Item Detail Information -->
   <{* In the current opinions, Book Type does not need the classification so commented out.
     <tr>
       <td class="head"><{$smarty.const._MD_XNPBOOK_BOOK_CLASSIFICATION_LABEL}></td>
       <td class="<{cycle name="oddeven"}>">
        <select name="<{$module_name}>_classification">
         <option value="">Any</option>
         <{html_options options=$classification_option}>
        </select>
       </td>
     </tr>
   *}>
     <tr>
       <td class="head"><{$smarty.const._MD_XNPBOOK_AUTHOR_LABEL}></td>
       <td class="<{cycle name="oddeven"}>"><input type="text" name="<{$module_name}>_author" value=""  size="50"/></td>
     </tr>
     <tr>
       <td class="head"><{$smarty.const._MD_XNPBOOK_EDITOR_LABEL}></td>
       <td class="<{cycle name="oddeven"}>"><input type="text" name="<{$module_name}>_editor" value=""  size="50"/></td>
     </tr>
     <tr>
       <td class="head"><{$smarty.const._MD_XNPBOOK_PUBLISHER_LABEL}></td>
       <td class="<{cycle name="oddeven"}>"><input type="text" name="<{$module_name}>_publisher" value=""  size="50"/></td>
     </tr>
     <tr>
       <td class="head"><{$smarty.const._MD_XNPBOOK_YEAR_LABEL}></td>
       <td class="<{cycle name="oddeven"}>"><{$basic.publication_year.value}></td>
     </tr>
     <tr>
       <td class="head"><{$smarty.const._MD_XNPBOOK_ISBN_LABEL}></td>
       <td class="<{cycle name="oddeven"}>"><input type="text" name="<{$module_name}>_isbn" value=""  size="50"/></td>
     </tr>
     <tr>
       <td class="head"><{$smarty.const._MD_XNPBOOK_PDF_LABEL}></td>
       <td class="<{cycle name="oddeven"}>"><input type="text" name="<{$module_name}>_book_pdf" value=""  size="50"/></td>
     </tr>
</table>
</div>
