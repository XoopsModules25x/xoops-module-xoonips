<{foreach  key=k item=v from=$post_vars}>
<{if is_array( $v )}>
<{foreach  key=k2 item=v2 from=$v}>
 <input type="hidden" name="<{$k}>[<{$k2}>]" value="<{$v2}>"/>
<{/foreach}>
<{else}>
 <input type="hidden" name="<{$k}>" value="<{$v}>"/>
<{/if}>
<{/foreach}>
 <div class="confirmMsg"><h4><{$message}></h4><br />
  <input class="formButton" type="submit" name="<{$form_data_name_yes}>" value="<{$smarty.const._YES}>"/>
 </div>
