<{* control to select date (for publication_mday) *}>
<table>
 <tr>
  <td width="60"><input type='checkbox' name='<{$prefixFrom}>' /><{$smarty.const._MD_XOONIPS_ITEM_FROM_LABEL}></td>
  <td><{html_select_date prefix=$prefixFrom time=$gmtime display_months=false display_years=false day_empty=$smarty.const._MD_XOONIPS_ITEM_SELECT_NONE_LABEL}></td>
 </tr>
 <tr>
  <td width="60"><input type='checkbox' name='<{$prefixTo}>' /><{$smarty.const._MD_XOONIPS_ITEM_TO_LABEL}></td>
  <td><{html_select_date prefix=$prefixTo time=$gmtime display_months=false display_years=false day_empty=$smarty.const._MD_XOONIPS_ITEM_SELECT_NONE_LABEL}></td>
 </tr>
</table>
