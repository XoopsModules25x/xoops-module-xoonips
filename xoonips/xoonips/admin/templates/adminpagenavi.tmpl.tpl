<patTemplate:tmpl name="page_navi">
<div style="text-align: center;">
<patTemplate:tmpl name="page_navi_prev" type="Condition" conditionvar="prev">
  <patTemplate:sub condition="default">
  <a href="{LINK}&amp;navi={PREV}">PREV</a>&nbsp;&nbsp;
  </patTemplate:sub>
  <patTemplate:sub condition="empty">
  PREV&nbsp;&nbsp;
  </patTemplate:sub>
</patTemplate:tmpl>
<patTemplate:tmpl name="page_navi_body" type="Condition" conditionvar="has_link">
  <patTemplate:sub condition="yes">
    <a href="{LINK}&amp;navi={PAGE}">{PAGE}</a>&nbsp;&nbsp;
  </patTemplate:sub>
  <patTemplate:sub condition="no">
    {PAGE}&nbsp;&nbsp;
  </patTemplate:sub>
</patTemplate:tmpl>
<patTemplate:tmpl name="page_navi_next" type="Condition" conditionvar="next">
  <patTemplate:sub condition="default">
  <a href="{LINK}&amp;navi={NEXT}">NEXT</a>
  </patTemplate:sub>
  <patTemplate:sub condition="empty">
  NEXT
  </patTemplate:sub>
</patTemplate:tmpl>
</div>
</patTemplate:tmpl>
