<patTemplate:tmpl name="header">
  <patTemplate:tmpl name="breadcrumbs" visibility="hidden">
    <div style="text-align: left; margin-bottom: 3px; color: black;">
    <patTemplate:tmpl name="breadcrumbs_items" type="Condition" conditionvar="TYPE">
      <patTemplate:sub condition="top">
         <a href="{URL}">{LABEL}</a>
      </patTemplate:sub>
      <patTemplate:sub condition="link">
         <span style="font-weight: bold;">&nbsp;&raquo;&raquo;&nbsp;</span>
         <a href="{URL}">{LABEL}</a>
      </patTemplate:sub>
      <patTemplate:sub condition="label">
         <span style="font-weight: bold;">&nbsp;&raquo;&raquo;&nbsp;</span>
         <span style="font-weight: bold;">{LABEL}</span>
      </patTemplate:sub>
    </patTemplate:tmpl>
    </div>
  </patTemplate:tmpl>
  <h3>{TITLE}</h3>
  <patTemplate:tmpl name="description" visibility="hidden">
  <div style="color: blue; margin: 10px;">{DESCRIPTION}</div>
  </patTemplate:tmpl>
</patTemplate:tmpl>
